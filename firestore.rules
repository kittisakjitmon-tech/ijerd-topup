rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is an admin
    // Option 1: Using custom claims (recommended)
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Option 2: Check admin status from users collection
    // Uncomment this if you prefer storing admin status in Firestore
    // function isAdmin() {
    //   return isAuthenticated() && 
    //          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.admin == true;
    // }
    
    // Games Collection Rules
    match /games/{gameId} {
      // Allow anyone to read active games
      allow read: if resource.data.active == true;
      
      // Allow admins to read all games (including inactive ones)
      allow read: if isAdmin();
      
      // Only admins can create, update, or delete games
      allow create: if isAdmin() && 
                       validateGameData(request.resource.data);
      
      allow update: if isAdmin() && 
                       validateGameData(request.resource.data);
      
      allow delete: if isAdmin();
      
      // Validation function for game data
      function validateGameData(data) {
        return data.keys().hasAll(['name', 'imageUrl', 'category', 'active', 'priority']) &&
               data.name is string && 
               data.name.size() > 0 &&
               data.imageUrl is string &&
               data.imageUrl.size() > 0 &&
               data.category is string &&
               data.category.size() > 0 &&
               data.active is bool &&
               data.priority is int &&
               data.priority >= 0;
      }
    }
    
    // Orders Collection Rules
    match /orders/{orderId} {
      // Allow anyone to create a new order
      allow create: if isAuthenticated() && 
                       validateOrderData(request.resource.data);
      
      // Only admins can read all orders
      allow read: if isAdmin();
      
      // Only admins can update or delete orders
      allow update: if isAdmin();
      allow delete: if isAdmin();
      
      // Validation function for order data
      function validateOrderData(data) {
        return data.keys().hasAll(['orderId', 'gameName', 'targetId', 'amount', 'status', 'timestamp']) &&
               data.orderId is string &&
               data.orderId.size() > 0 &&
               data.gameName is string &&
               data.gameName.size() > 0 &&
               data.targetId is string &&
               data.targetId.size() > 0 &&
               data.amount is number &&
               data.amount > 0 &&
               data.status is string &&
               data.status == 'pending' &&
               data.timestamp is timestamp;
      }
    }
    
    // Users Collection (if you need to store user data)
    match /users/{userId} {
      // Users can read their own data
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can create their own document
      allow create: if isAuthenticated() && 
                       request.auth.uid == userId;
      
      // Users can update their own data (but not admin status)
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       !('admin' in request.resource.data.diff(resource.data).affectedKeys());
      
      // Only admins can update admin status
      allow update: if isAdmin();
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
