rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is an admin
    // Using custom claims (recommended approach)
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Games Collection Rules
    match /games/{gameId} {
      // Allow anyone to read active games
      allow read: if resource.data.active == true;
      
      // Allow admins to read all games (including inactive ones)
      allow read: if isAdmin();
      
      // Only admins can create, update, or delete games
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Orders Collection Rules
    match /orders/{orderId} {
      // Allow anyone to create a new order
      allow create: if isAuthenticated();
      
      // Only admins can read all orders
      allow read: if isAdmin();
      
      // Only admins can update or delete orders
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
