rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Games: ทุกคนอ่านได้, เฉพาะ admin เขียน
    match /games/{gameId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == "YOUR_ADMIN_UID_HERE"; // แทนที่ด้วย UID คุณ
    }

    // Orders: user สร้าง/อ่าน/อัพเดทของตัวเองเท่านั้น
    match /orders/{orderId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow delete: if false; // ไม่ให้ลบ
    }
  }
}
