rules_version = '2';

// =============================================================================
// Firestore Security Rules - iJerdTopup (เว็บเติมเกม)
// =============================================================================
//
// สรุปสิทธิ์:
// - games:    ทุกคนอ่านได้ | เฉพาะ admin (UID ที่กำหนด) สร้าง/แก้ไข/ลบได้
// - orders:   สร้างได้เฉพาะหลัง login และต้องมี userId == auth.uid
//             อ่าน/อัปเดตได้เฉพาะของตัวเอง | admin อ่านทุกอันได้
// - users:    user อ่าน/เขียนได้เฉพาะ document ของตัวเอง (profile)
//
// =============================================================================

service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper: ตรวจสอบว่าผู้ใช้ล็อกอินแล้ว
    // -------------------------------------------------------------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    // -------------------------------------------------------------------------
    // Helper: ตรวจสอบว่าเป็น Admin
    // แทนที่ 'uidadmin123' ด้วย UID จริงจาก Firebase Console > Authentication > Users
    // -------------------------------------------------------------------------
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.uid in [
               'uidadmin123'   // แทนที่ด้วย UID ของคุณ (เช่น คัดลอกจาก User UID ใน Authentication)
               // เพิ่ม admin คนอื่น: 'uid2', 'uid3'
             ];
    }

    // -------------------------------------------------------------------------
    // Collection: games
    // - read:  ทุกคน (ไม่ต้องล็อกอิน)
    // - create/update/delete: เฉพาะ admin
    // -------------------------------------------------------------------------
    match /games/{gameId} {
      allow read: if true;

      allow create: if isAdmin() && validateGameData(request.resource.data);
      allow update: if isAdmin() && validateGameData(request.resource.data);
      allow delete: if isAdmin();

      function validateGameData(data) {
        return data.keys().hasAll(['name', 'imageUrl', 'category', 'active', 'priority']) &&
               data.name is string && data.name.size() > 0 &&
               data.imageUrl is string && data.imageUrl.size() > 0 &&
               data.category is string && data.category.size() > 0 &&
               data.active is bool &&
               data.priority is int && data.priority >= 0;
      }
    }

    // -------------------------------------------------------------------------
    // Collection: orders
    // - create: เฉพาะหลัง login และ document ต้องมี userId == request.auth.uid
    // - read:   user อ่านได้เฉพาะที่ resource.data.userId == auth.uid
    //           admin อ่านทุก document ได้
    // - update: user อัปเดตได้เฉพาะของตัวเอง (userId == auth.uid)
    // - delete: ไม่ให้ user ลบ (ถ้าต้องการให้ admin ลบ ให้เพิ่ม allow delete: if isAdmin();)
    // -------------------------------------------------------------------------
    match /orders/{orderId} {
      // สร้าง order ได้เฉพาะเมื่อล็อกอิน และต้องส่ง userId ตรงกับ auth.uid
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       validateOrderCreate(request.resource.data);

      // อ่าน: เฉพาะ order ของตัวเอง หรือเป็น admin
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid ||
        isAdmin()
      );

      // อัปเดต: เฉพาะ order ของตัวเอง
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow delete: if false;

      function validateOrderCreate(data) {
        // ฟิลด์บังคับ (server, phone เป็น optional ใน app ได้)
        return data.keys().hasAll(['userId', 'orderId', 'gameName', 'targetId', 'amount', 'status', 'timestamp']) &&
               data.userId is string && data.userId == request.auth.uid &&
               data.orderId is string && data.orderId.size() > 0 &&
               data.gameName is string && data.gameName.size() > 0 &&
               data.targetId is string && data.targetId.size() > 0 &&
               data.amount is number && data.amount > 0 &&
               data.status is string && data.status == 'pending' &&
               data.timestamp is timestamp;
      }
    }

    // -------------------------------------------------------------------------
    // Collection: users (profile ต่อ user)
    // - read, write: ได้เฉพาะ document ที่ path เป็น uid ของตัวเองเท่านั้น
    // -------------------------------------------------------------------------
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // คอลเลกชันอื่น: ปิดทั้งหมด (default deny)
    // -------------------------------------------------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
