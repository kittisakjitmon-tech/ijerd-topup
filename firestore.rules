rules_version = '2';

// =============================================================================
// Firestore Security Rules - iJerdTopup
// =============================================================================
// - games: ทุกคนอ่านได้, เฉพาะ admin (UID ที่กำหนด) เขียนได้
// - orders: user สร้าง/อ่านได้เฉพาะของตัวเอง (userId ต้องตรงกับ auth.uid)
// - users: user อ่าน/เขียนได้เฉพาะ document ของตัวเอง
// =============================================================================

service cloud.firestore {
  match /databases/{database}/documents {

    // -------------------------------------------------------------------------
    // Helper: ตรวจสอบว่ามีการล็อกอิน
    // -------------------------------------------------------------------------
    function isAuthenticated() {
      return request.auth != null;
    }

    // -------------------------------------------------------------------------
    // Helper: ตรวจสอบว่าเป็น Admin
    // กำหนด UID ของ admin เอง (จาก Firebase Console > Authentication > Users)
    // -------------------------------------------------------------------------
    function isAdmin() {
      return isAuthenticated() &&
             request.auth.uid in [
               'YOUR_ADMIN_UID_HERE'  // แทนที่ด้วย UID จริงของแอดมิน (เช่น จาก auth.currentUser.uid)
               // เพิ่ม UID อื่นได้: 'uid2', 'uid3'
             ];
    }

    // -------------------------------------------------------------------------
    // Collection: games
    // - อ่าน: ทุกคน (ไม่ต้องล็อกอิน)
    // - สร้าง/แก้ไข/ลบ: เฉพาะ admin
    // -------------------------------------------------------------------------
    match /games/{gameId} {
      allow read: if true;

      allow create: if isAdmin() && validateGameCreate(request.resource.data);
      allow update: if isAdmin() && validateGameUpdate(request.resource.data);
      allow delete: if isAdmin();

      function validateGameCreate(data) {
        return data.keys().hasAll(['name', 'imageUrl', 'category', 'active', 'priority']) &&
               data.name is string && data.name.size() > 0 &&
               data.imageUrl is string && data.imageUrl.size() > 0 &&
               data.category is string && data.category.size() > 0 &&
               data.active is bool &&
               data.priority is int && data.priority >= 0;
      }

      function validateGameUpdate(data) {
        return data.keys().hasAll(['name', 'imageUrl', 'category', 'active', 'priority']) &&
               data.name is string && data.name.size() > 0 &&
               data.imageUrl is string && data.imageUrl.size() > 0 &&
               data.category is string && data.category.size() > 0 &&
               data.active is bool &&
               data.priority is int && data.priority >= 0;
      }
    }

    // -------------------------------------------------------------------------
    // Collection: orders
    // - สร้าง: ได้เฉพาะเมื่อล็อกอิน และต้องใส่ userId ตรงกับ auth.uid
    // - อ่าน: ได้เฉพาะเอกสารที่ userId ตรงกับ auth.uid (อ่านของตัวเองเท่านั้น)
    // - แก้ไข/ลบ: ไม่เปิดให้ user ลบ (ถ้าต้องการให้แอดมินลบ ให้เพิ่ม allow delete: if isAdmin();)
    // -------------------------------------------------------------------------
    match /orders/{orderId} {
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       validateOrderCreate(request.resource.data);

      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      allow update, delete: if false;

      function validateOrderCreate(data) {
        return data.keys().hasAll(['userId', 'orderId', 'gameName', 'targetId', 'amount', 'status', 'timestamp']) &&
               data.userId is string && data.userId == request.auth.uid &&
               data.orderId is string && data.orderId.size() > 0 &&
               data.gameName is string && data.gameName.size() > 0 &&
               data.targetId is string && data.targetId.size() > 0 &&
               data.amount is number && data.amount > 0 &&
               data.status is string && data.status == 'pending' &&
               data.timestamp is timestamp;
      }
    }

    // -------------------------------------------------------------------------
    // Collection: users (เก็บข้อมูล user เพิ่มเติม)
    // - อ่าน/เขียน: ได้เฉพาะ document ที่ document id ตรงกับ auth.uid
    // -------------------------------------------------------------------------
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // -------------------------------------------------------------------------
    // คอลเลกชันอื่น: ปิดทั้งหมด (default deny)
    // -------------------------------------------------------------------------
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
